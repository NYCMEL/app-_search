#!/Melify/bin/mac/tclkit

lappend ::auto_path /Melify/mtk/dev/tk/lib/unqlite

package require unqlite

unqlite db "unqlite.db"

db kv_store 1000 [list id 1000 fname Isac lname Berman email admin@melify.com paswd guest active 1 updated 1042129066 role admin company Melify]
db kv_store 1001 [list id 1001 fname Peter lname Johnson email u2@melify.com paswd guest active 1 updated 1042129066 role user company Melify]
db kv_store 1002 [list id 1002 fnameSusan lname Smith email u3@melify.com paswd guest active 1 updated 1042129066 role sales company Melify]

puts [db kv_fetch 1000]

db doc_create user
db doc_store "{ name : 'alex', age : 19, mail : 'alex@example.com'  }"
db doc_store "{ name : 'robert', age : 49, mail : 'dude@example.com'  }"
db doc_store "{ name : 'orange', age : 12, mail : 'cat@example.com'  }"
db doc_store "{ name : 'michael', age : 52, mail : 'test@example.com'  }"
db doc_store "{ name : 'glary', age : 45, mail : 'beart@example.com'  }"

db doc_fetchall

#db close
